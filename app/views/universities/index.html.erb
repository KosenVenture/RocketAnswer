<%= content_for :title do %>学校一覧<% end %>

<% breadcrumb :universities %>

<h1><i class="fa fa-list"></i>学校一覧</h1>

<div class="page-header">
  <table class="table table-hover table-bordered">
    <thead>
      <tr>
        <th>設置</th>
        <th>学校名</th>
        <th>投稿解答数</th>
        <th>投稿体験談数</th>
      </tr>
    </thead>

    <tbody>
      <% @universities.each do |university| %>
        <tr>
          <td><%= university.establishment %></td>
          <td><%= link_to university.name, university %></td>
          <td><%= @answer_counts[university.id] || 0 %></td>
          <td><%= @story_counts[university.id] || 0 %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
