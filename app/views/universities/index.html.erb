<% breadcrumb :universities %>

<h1>学校一覧</h1>

<div class="page-header">
  <table class="table table-hover table-bordered">
    <thead>
      <tr>
        <th>学校名</th>
        <th>都道府県</th>
        <th>住所</th>
      </tr>
    </thead>

    <tbody>
      <% @universities.each do |university| %>
        <tr>
          <td><%= link_to "#{university.establishment} #{university.name}", university %></td>
          <td><%= university.prefecture %></td>
          <td><%= university.address %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>